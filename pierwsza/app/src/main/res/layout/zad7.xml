<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:text="Login:" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/a"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/a"
            android:inputType="text"
            android:maxLines="1" />
        <!-- Baseline trzyma sie lini dolnej-->
        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="e-mail:" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/c"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="70dp"
            android:layout_toRightOf="@+id/b"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Hasło:" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/b"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/b"
            android:layout_marginRight="70dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Powtórz\nhasło:" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/d"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="70dp"
            android:layout_toRightOf="@+id/d"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Nr.tel:" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/e"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="70dp"
            android:layout_toRightOf="@+id/e"
            android:inputType="textPassword" />


    </RelativeLayout>


</LinearLayout>